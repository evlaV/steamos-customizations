[Unit]
Description=Etc Overlay

[Mount]
Where=/etc
What=overlay
Type=overlay
Options=x-initrd.mount,lowerdir=/etc,upperdir=@etc_overlay_absdir@/upper,workdir=@etc_overlay_absdir@/work

[Install]
WantedBy=local-fs.target
