[Unit]
Description=SteamOS VM guest detection
RefuseManualStart=yes
Before=sddm.service
ConditionPathExists=!@sddm_autologin_conf@
ConditionVirtualization=vm

[Service]
Type=oneshot
ExecStart=@libexecdir@/steamos/steamos-set-autologin-session

[Install]
WantedBy=graphical.target
