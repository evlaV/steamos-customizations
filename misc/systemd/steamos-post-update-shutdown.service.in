[Unit]
Description=Run tasks on shutdown after an OS update
DefaultDependencies=no
Before=shutdown.target
ConditionPathExists=/run/steamos-post-update-shutdown-booted-slot

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@libexecdir@/steamos/steamos-post-update-shutdown

[Install]
WantedBy=shutdown.target
