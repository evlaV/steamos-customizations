[Unit]
Requires=systemd-fsck@@udev_symlinks_escaped_path@-shared-esp.service
After=systemd-fsck@@udev_symlinks_escaped_path@-shared-esp.service
After=blockdev@@udev_symlinks_escaped_path@-shared-esp.target

[Mount]
What=@udev_symlinks_absdir@/shared/esp
Where=/esp
Type=vfat
Options=defaults,nofail,umask=0077,x-systemd.automount,x-systemd.idle-timeout=1min
