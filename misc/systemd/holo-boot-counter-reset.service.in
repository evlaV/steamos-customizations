[Unit]
Description=Reset boot counter after resuming from hibernation
After=systemd-hibernate-clear.service
Wants=systemd-hibernate-clear.service

[Service]
Type=oneshot
ExecStart=/usr/bin/holo-bootconf --set boot-attempts 0

[Install]
WantedBy=systemd-hibernate-clear.service
