#!/bin/bash

build() {
    @STEAMOS_BINARIES@

    map add_binary "${STEAMOS_BINARIES[@]}"
    map add_file /usr/lib/steamos/steamos-initrd-do-reset

    add_runscript
}

help() {
    cat <<HELPEOF
This hook adds the tools required by the steamos custom boot mechanism. Do not
remove this hook unless you know what you're doing.
HELPEOF
}
