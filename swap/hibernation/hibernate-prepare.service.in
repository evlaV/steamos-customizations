[Unit]
Description=Prepare Temporary Hibernation Swap
DefaultDependencies=no
RequiresMountsFor=/var/lib/systemd /home
Before=systemd-hibernate.service
Before=hibernate.target

[Service]
Type=oneshot
ExecStart=@libexecdir@/steamos/hibernate-swap-helper.sh create

[Install]
WantedBy=hibernate.target
