[Unit]
Description=Remove default swapfile created by SteamOS in previous releases
DefaultDependencies=no
Before=multi-user.target
Conflicts=shutdown.target
RequiresMountsFor=/home/swapfile
ConditionPathExists=/home/swapfile
ConditionFileIsExecutable=@libexecdir@/steamos/steamos-rm-default-swapfile

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@libexecdir@/steamos/steamos-rm-default-swapfile /home/swapfile

[Install]
WantedBy=swap.target
